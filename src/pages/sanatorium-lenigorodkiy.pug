        .section
          .introduction-type-1.introduction-dzhalilskiy 
            .container
              h2.title Лениногорский
              .introduction__wrapper
                .introduction__top
                  h3.introduction__title С заботой о всей семье
                .introduction__bottom
                  p.introduction__text Современный и комфортный санаторий, весь комплекс услуг которого расположены одном комплексе: жилые номера от стандартных до класса люкс, более 30 лечебных кабинетов, обеденный зал, современный тренажерный зал, конференц-зал, бильярдная и сауна с плавательным бассейном.
                  
                div(class='overflow-hidden introduction__slider')
                  .accept-slider
                    .swiper-wrapper
                      .swiper-slide
                        img(src=require('/assets/images/sanatorium/lenigorodkiy/lenigorodkiy-slide-1.png'))
                      .swiper-slide
                        img(src=require('/assets/images/sanatorium/lenigorodkiy/lenigorodkiy-slide-2.png'))
                    
                    button.btn-prev
                      +svg('back-line')
                    button.btn-next
                      +svg('forward-line')
                
                include ../components/select/index.pug
                include ../components/button.pug
                a(href="https://leninogorskiy.tatneft.ru/?lang=ru").book 
                  +select('Заезд / Выезд', {name:1,val:'0'},{name:2,val:'01'},{name:3,val:'02'})
                  +select('Гости', {name:1,val:'0'},{name:2,val:'01'},{name:3,val:'02'})
                  +select('Промокод', {name:1,val:'0'},{name:2,val:'01'},{name:3,val:'02'})
