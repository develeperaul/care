    title Document
  body
    .wrapper
      .sidebar#sidebar
        .container
          .sidebar__head 
            a(href="/" class='logo' data-target='sidebar' data-action='close') 
              +svg("logo")
            button.close(data-target='sidebar' data-action='close') 
              +svg("close")
          nav.sidebar__content 
            a(href="/green-scientists.html" data-target='sidebar' data-action='close')  
              +svg("child" ,17,15)
              span Дети

            a(href="/health.html" data-target='sidebar' data-action='close')  
              +svg("health" ,17,17)
              span Здоровье

            a(href="/rest.html" data-target='sidebar' data-action='close')  
              +svg("rest" ,17,14)
              span Отдых

            a(href="/restaurants.html" data-target='sidebar' data-action='close')  
              +svg("nutrition" ,17,17)
              span Питание

            a(href="/horseback-riding.html" data-target='sidebar' data-action='close')  
              +svg("sport" ,17,17)
              span Спорт

            a(href="/museum.html" data-target='sidebar' data-action='close')  
              +svg("culture" ,17,15)
              span Культура

            a(href="/about.html" data-target='sidebar' data-action='close')  
              +svg("about" ,17,17)
              span О компании
      header.header.header__sanatorium
        .container
          .header__wrapper 
            a(href="/" class='logo') 
              +svg("logo")
            button.burger( data-target='sidebar' data-action='open')
              +svg("burger", 35)
            nav
              a(href="/about.html") О компании
              a(href="/health.html") Здоровье
              a(href="/green-scientists.html") Дети
              a(href="/horseback-riding.html") Спорт
              a(href="/rest.html") Отдых
              a(href="/restaurants.html") Питание
              a(href="/museum.html") Культура 
            button.call 
              +svg("phone", 24)
          .header__bg
            img(src=require('/assets/images/sport/sport-kentavr.png') alt="")
      main
        .section.sport
          .container
            h2.title Конно-спортивная <br/>школа Кентавр
            
            p.subtitle Спортивный комплекс
            
            p.text Активно популяризирует конный спорт в Елабуге. Благодаря хорошим условиям для содержания лошадей и проведения тренировок здесь круглый год активно готовят спортсменов. В школе представлены: классические виды спорта, испытания лошадей, иппотерапия и паравыездка, пони-спорт и группы спортивного развития.
            .accept.sport__slider
              .grid.slider
                div(class='overflow-hidden')
                  .accept.sport__slider
                    .accept-slider
                      .swiper-wrapper
                        .swiper-slide
                          img(src=require('/assets/images/horse7.png'))
                        .swiper-slide
                          img(src=require('/assets/images/horse8.png'))
                      
                      button.btn-prev
                        +svg('back-line')
                      button.btn-next
                        +svg('forward-line')
        
        include ../sections/coachingStaff/index.pug    
        .section.img-content
          .container 
            img(src=require("/assets/images/horse3.png"), alt="")
        .section.prices 
