
include ../components/svg.pug
doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
  body
    .wrapper
      .sidebar#sidebar
        .container
          .sidebar__head 
            a(href="/" class='logo' data-target='sidebar' data-action='close') 
              +svg("logo")
            button.close(data-target='sidebar' data-action='close') 
              +svg("close")
          nav.sidebar__content 
            a(href="/green-scientists.html" data-target='sidebar' data-action='close')  
              +svg("child" ,17,15)
              span Дети

            a(href="/health.html" data-target='sidebar' data-action='close')  
              +svg("health" ,17,17)
              span Здоровье

            a(href="/rest.html" data-target='sidebar' data-action='close')  
              +svg("rest" ,17,14)
              span Отдых

            a(href="/restaurants.html" data-target='sidebar' data-action='close')  
              +svg("nutrition" ,17,17)
              span Питание

            a(href="/sport-actuba.html" data-target='sidebar' data-action='close')  
              +svg("sport" ,17,17)
              span Спорт

            a(href="/museum.html" data-target='sidebar' data-action='close')  
              +svg("culture" ,17,15)
              span Культура

            a(href="/about.html" data-target='sidebar' data-action='close')  
              +svg("about" ,17,17)
              span О компании
      header.header.header__sanatorium
        .container
          .header__wrapper 
            a(href="/" class='logo') 
              +svg("logo")
            button.burger( data-target='sidebar' data-action='open')
              +svg("burger", 35)
            nav
              a(href="/about.html") О компании
              a(href="/health.html") Здоровье
              a(href="/green-scientists.html") Дети
              a(href="/sport-actuba.html") Спорт
              a(href="/rest.html") Отдых
              a(href="/restaurants.html") Питание
              a(href="/museum.html") Культура 
            button.call 
              +svg("phone", 24)
        .container.relative
          +svg('figures')(class=" lg2:w-[470px] hidden lg2:block lg2:h-[517px] z-10 lg2:z-0 absolute right-0 lg2:top-0")    
          .header__bg
            img(src=require('/assets/images/camp/camp-ivolga.png') alt="")
      main
        .section.camp.relative
          +svg('grass')(class=" w-[84px] h-[80px] lg2:w-[262px] lg2:h-[250px] z-10 lg2:z-0 absolute right-[42px] top-[-70px] lg2:right-[380px] lg2:top-[-40px]")
          .container 
            .camp__top
              h2.title Иволга
              p.text Детский оздоровительный лагерь
            .camp__directions.directions
              p.directions__title Оздоровительное направление летних смен — здоровое питание
              .directions__wrapper
                .item 
                  .item__title Первая
                  .item__date 1 июня — 21 июня
                .item 
                  .item__title Вторая
                  .item__date 24 июня — 14 июля
                .item 
                  .item__title Третья
                  .item__date 17 июля — 6 августа
                .item 
                  .item__title Четвертая
                  .item__date 9 августа — 29 августа
            .camp__slider.grid
                .other-slider.other-slider3
                  .content
                    h2.title Интенсивная оздоровительная программа с упором на равильное питание
                    .btn-controls
                      button.btn-prev
                        +svg('back-line')
                      button.btn-next
                        +svg('forward-line')
                  .swiper-wrapper
                    .swiper-slide
                      img(src=require('/assets/images/intensive2.png'))
            .camp__req        
              include ../components/select/index.pug
              include ../components/button.pug
              a(href="https://social.tatneft.ru/deti/ivolga/?lang=ru").book 
                +select('Заезд / Выезд', {name:1,val:'0'},{name:2,val:'01'},{name:3,val:'02'})
                +select('Гости', {name:1,val:'0'},{name:2,val:'01'},{name:3,val:'02'})
                +select('Промокод', {name:1,val:'0'},{name:2,val:'01'},{name:3,val:'02'})
                +button('Забронировать','orange')(type='submit')   
        .camp-about
          .container.relative 
            +svg('home-people')(class=" lg2:w-[329px] hidden lg2:block lg2:h-[251px]  absolute right-[300px] lg2:top-[20px]")      
            .camp-about__top  
              h2.title О лагере
              p.text Один из лучших лагерей в Республике Татарстан, «Иволга» каждый год встречает все больше и больше гостей. Одновременно здесь могут отдыхать до 120 детей — их расселяют в 3 комфортабельных спальных корпуса по 3-5 человек. В каждой комнате — прихожая, кровати, тумбочки, шкаф, туалет и душ.
            .camp-about__img 
              img(src=require('/assets/images/about-ivolga.png'), alt="")
        .camp-infrastructure 
          .container 
            .camp-infrastructure__top
              h2.title Инфраструктура
              p.text Вокруг лагеря раскинулся лесной массив, поэтому воздух здесь всегда чистый. На территории есть обустроенный родник и парк отдыха — можно почитать в тишине книгу. Для любителей более активного отдыха в лагере разнообразие спортивной
            .camp-infrastructure__list 
              .item
                .item__icon 
                  +svg('stadion')
                .item__title Большой стадион
              .item
                .item__icon 
                  +svg('ball')
                .item__title Волейбольная площадка
              .item
                .item__icon 
                  +svg('batute')
                .item__title Футбольное поле
              .item
                .item__icon 
                  +svg('kikboks')
                .item__title Спортивная площадка со снарядами
              .item
                .item__icon 
                  +svg('bitter')
                .item__title Баскетбольная площадка
              .item
                .item__icon 
                  +svg('note')
                .item__title Батут
              .item
                .item__icon 
                  +svg('note')
                .item__title Площадка для флорбола
              .item
                .item__icon 
                  +svg('note')
                .item__title Открытый бассейн с водяной горкой и трамплинами
              .item
                .item__icon 
                  +svg('note')
                .item__title Теннисный корт
        .section.accept
          .container
            .grid.slider
              div(class='overflow-hidden introduction__slider')
                .accept-slider
                  .swiper-wrapper
                    .swiper-slide
                      img(src=require('/assets/images/child-selfy.png'))
                    .swiper-slide
                      img(src=require('/assets/images/child-flower.png'))
                  
                  button.btn-prev
                    +svg('back-line')
                  button.btn-next
                    +svg('forward-line')
        
