    title Document
  body
    .wrapper
      .sidebar#sidebar
        .container
          .sidebar__head 
            a(href="/" class='logo' data-target='sidebar' data-action='close') 
              +svg("logo")
            button.close(data-target='sidebar' data-action='close') 
              +svg("close")
          nav.sidebar__content 
            a(href="/green-scientists.html" data-target='sidebar' data-action='close')  
              +svg("child" ,17,15)
              span Дети

            a(href="/health.html" data-target='sidebar' data-action='close')  
              +svg("health" ,17,17)
              span Здоровье

            a(href="/rest.html" data-target='sidebar' data-action='close')  
              +svg("rest" ,17,14)
              span Отдых

            a(href="/restaurants.html" data-target='sidebar' data-action='close')  
              +svg("nutrition" ,17,17)
              span Питание

            a(href="/horseback-riding.html" data-target='sidebar' data-action='close')  
              +svg("sport" ,17,17)
              span Спорт

            a(href="/museum.html" data-target='sidebar' data-action='close')  
              +svg("culture" ,17,15)
              span Культура

            a(href="/about.html" data-target='sidebar' data-action='close')  
              +svg("about" ,17,17)
              span О компании
      header.header.header__sanatorium
        .container
          .header__wrapper 
            a(href="/" class='logo') 
              +svg("logo")
            button.burger( data-target='sidebar' data-action='open')
              +svg("burger", 35)
            nav
              a(href="/about.html") О компании
              a(href="/health.html") Здоровье
              a(href="/green-scientists.html") Дети
              a(href="/horseback-riding.html") Спорт
              a(href="/rest.html") Отдых
              a(href="/restaurants.html") Питание
              a(href="/museum.html") Культура 
            button.call 
              +svg("phone", 24)
          .header__bg
            img(src=require('/assets/images/rest/rest-chaika.png') alt="")
      main
        .rest 
          .container 
            .rest__top 
              .rest__top-left 
                h2.title Чайка-1
                p.text База отдыха
              .rest__top-right  
                p.text База расположена в лесополосе на живописном берегу Карабашского водохранилища. Одновременно здесь могут остановиться 96 отдыхающих. На базе можно провести выходные, отметить день рождения, выпускной, свадьбу или другое важное событие.


        .section.placement
          .container
            h2.title Размещение
            p.text Для гостей базы отдыха предусмотрено несколько вариантов размещения: стандартные двухкомнатные домики вагонного типа на 4 человека, одноэтажный дом повышенной комфортности на 6 человек и двухэтажный дом повышенной комфортности на 9 человек.     
            .accept
              .grid.slider
                div(class='overflow-hidden')
                  .accept-slider
                    .swiper-wrapper
                      .swiper-slide
                        img(src=require('/assets/images/rest3.png'))
                      .swiper-slide
                        img(src=require('/assets/images/ribalka.png'))
                    
                    button.btn-prev
                      +svg('back-line')
                    button.btn-next
                      +svg('forward-line')
        .section.directions-care 
          .container
            
            h2.title Инфраструктура
            p.text Чтобы отдых в «Чайке» запомнился, здесь созданы все условия: 
            div(class=' grid gap-5 lg2:gap-8 lg2:grid-cols-3')
              
              .trend 
                +svg('sun2').trend__icon
                h4.trend__title Парковка на территории, чтобы вы не беспокоились
              .trend 
                +svg('heart').trend__icon
                h4.trend__title Летняя душевая с горячей водой
              .trend 
                +svg('star').trend__icon
                h4.trend__title Место для отдыха на берегу с шезлонгами
              .trend 
                +svg('sex2').trend__icon
                h4.trend__title Пирс с выходом на воду
              .trend 
                +svg('lock').trend__icon
                h4.trend__title Площадка с уличными тренажерами
              .trend 
                +svg('grass-blue').trend__icon
                h4.trend__title Футбольная и волейбольная площадки
              .trend 
                +svg('grass-blue').trend__icon
                h4.trend__title Велосипеды
              .trend 
                +svg('grass-blue').trend__icon
                h4.trend__title Детская площадка
              .trend 
                +svg('grass-blue').trend__icon
                h4.trend__title Возможность отправиться на рыбалку со своим инвентарем
        .section 
          .container
            include ../components/select/index.pug
            include ../components/button.pug
            a(href="https://social.tatneft.ru/deti/ivolga/?lang=ru").book 
              +select('Заезд / Выезд', {name:1,val:'0'},{name:2,val:'01'},{name:3,val:'02'})
              +select('Гости', {name:1,val:'0'},{name:2,val:'01'},{name:3,val:'02'})
              +select('Промокод', {name:1,val:'0'},{name:2,val:'01'},{name:3,val:'02'})
              +button('Забронировать','orange')(type='submit')  
        
        .section.img-content
          .container 
            img(src=require("/assets/images/rest9.png"), alt="")
        .section.price-book
          .container
            h2.title Цены и бронирование
            .price-book__wrapper
              .price-book__top
                .price-book__list 
