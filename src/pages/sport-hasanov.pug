include ../components/svg.pug
doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
  body
    .wrapper
      .sidebar#sidebar
        .container
          .sidebar__head 
            a(href="/" class='logo' data-target='sidebar' data-action='close') 
              +svg("logo")
            button.close(data-target='sidebar' data-action='close') 
              +svg("close")
          nav.sidebar__content 
            a(href="/green-scientists.html" data-target='sidebar' data-action='close')  
              +svg("child" ,17,15)
              span Дети

            a(href="/health.html" data-target='sidebar' data-action='close')  
              +svg("health" ,17,17)
              span Здоровье

            a(href="/rest.html" data-target='sidebar' data-action='close')  
              +svg("rest" ,17,14)
              span Отдых

            a(href="/restaurants.html" data-target='sidebar' data-action='close')  
              +svg("nutrition" ,17,17)
              span Питание

            a(href="/horseback-riding.html" data-target='sidebar' data-action='close')  
              +svg("sport" ,17,17)
              span Спорт

            a(href="/museum.html" data-target='sidebar' data-action='close')  
              +svg("culture" ,17,15)
              span Культура

            a(href="/about.html" data-target='sidebar' data-action='close')  
              +svg("about" ,17,17)
              span О компании
      header.header.header__sanatorium
        .container
          .header__wrapper 
            a(href="/" class='logo') 
              +svg("logo")
            button.burger( data-target='sidebar' data-action='open')
              +svg("burger", 35)
            nav
              a(href="/about.html") О компании
              a(href="/health.html") Здоровье
              a(href="/green-scientists.html") Дети
              a(href="/horseback-riding.html") Спорт
              a(href="/rest.html") Отдых
              a(href="/restaurants.html") Питание
              a(href="/museum.html") Культура 
            button.call 
              +svg("phone", 24)
          .header__bg
            img(src=require('/assets/images/sport/sport-hasanov.png') alt="")
      main
        .section.sport
          .container
            h2.title Спорткомплекс <br/>им. И.И.Хасанова
            
            p.subtitle Спортивный комплекс
            p.text В спорткомплексе созданы вс условия для вовлечения и поддержания здорового и активного образа жизни. Жители могут заниматься волейболом, баскетболом, мини-футболом, аэробикой, большим или настольным теннисом. Кроме того, круглый год работает спортзал и бильярд, а зимой — прокат лыж. На базе спорткомплекса существует ДЮСШ по лыжным гонкам.

            .accept.sport__slider
              .grid.slider
                div(class='overflow-hidden')
                  .accept.sport__slider
                    .accept-slider
                      .swiper-wrapper
                        .swiper-slide
                          img(src=require('/assets/images/sport-zal1.png'))
                        .swiper-slide
                          img(src=require('/assets/images/sport-zal2.png'))
                      
                      button.btn-prev
                        +svg('back-line')
                      button.btn-next
                        +svg('forward-line')
        include ../sections/coachingStaff/index.pug
        .section.img-content
          .container 
            img(src=require("/assets/images/pool.png"), alt="")
            
        .section.prices 
          .container 
            h2.title Абонементы и цены
            .prices__wrapper
              .prices__content
                .prices__content-title Бассейн
                .prices__content-list 
                  .item 
                    .item__top 1 месяц
                    .item__bottom 
                      div 1 600 рублей
                      div 1 200 рублей — льготный
                  .item 
                    .item__top 3 месяц
                    .item__bottom 
                      div 3 700 рублей
                      div 2 800 рублей — льготный
                  .item 
                    .item__top 6 месяц
                    .item__bottom 
                      div 7 000 рублей
                      div 5 200 рублей — льготный
              .prices__content
                .prices__content-title Тренажерный зал / групповые занятия
                .prices__content-list 
                  .item 
                    .item__top 1 месяц
                    .item__bottom 
                      div 1 600 рублей
                      div 1 200 рублей — льготный
                  .item 
                    .item__top 3 месяц
                    .item__bottom 
                      div 2 800 рублей
                      div 1 850 рублей — льготный
                  .item 
                    .item__top 6 месяц
                    .item__bottom 
                      div 5 200 рублей
                      div 3 400 рублей — льготный
            .prices__bottom
              .prices__info-list          
                p * льготный абонемент — для пенсионеров и школьников
              .prices__info
                +svg('home')
                p Абонемент действует со дня покупки в течении первого (трех, шести) месяца. По нему вы можете посещать занятия 1 раз в день по расписанию залов или бассейна.
        .section.contacts
          .container
            .contacts__wrapper
              .contacts__top.relative
                +svg('call')(class=" lg2:w-[130px] hidden lg2:block lg2:h-[130px]  absolute lg2:right-[-130px] lg2:bottom-[180px]")    
                h4.title Увидимся!
                
                p.contacts__text  Республика Татарстан, г. Лениногорск, ул. Школьная, д. 52.
                div
                  p.contacts__text вахта
                  a(href="tel:+78559593107").contacts__link 8-85595-93107
                div
                  p.contacts__text директор
                  a(href="tel:+78559593106").contacts__link 8-85595-93106 
                div
                  p.contacts__text директор
                  a(href="tel:+78559593115 ").contacts__link 8-85595-93115 
                
                
              .contacts__bottom
                img(src=require('/assets/images/maps/sport-hasanov-map.png'), alt="")
      include ../sections/footer/index.pug

      
    
    
